<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".one">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg1"
                android:fontFamily="@font/googlesans_bold"
                android:text="Introduction"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/vid11"
                android:layout_below="@id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:autoPlay="false"
                app:showYouTubeButton="false"
                app:videoId="IHn-ZXDEx8k" />

            <TextView
                android:id="@+id/text11"
                android:layout_below="@id/vid11"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/googlesans_regular"
                android:text="Apa itu Photoshop?"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/vid12"
                android:layout_below="@+id/vid11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:autoPlay="false"
                app:showYouTubeButton="false"
                app:videoId="MfvoTSGHncw" />

            <TextView
                android:id="@+id/text12"
                android:layout_below="@id/vid12"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/googlesans_regular"
                android:text="Mengaktifkan Drag and Drop"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/vid13"
                android:layout_below="@+id/vid12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:autoPlay="false"
                app:showYouTubeButton="false"
                app:videoId="wyrdCpQ2EX4" />

            <TextView
                android:id="@+id/text13"
                android:layout_below="@id/vid13"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/googlesans_regular"
                android:text="Komponen pada Photoshop"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/vid14"
                android:layout_below="@id/vid13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:autoPlay="false"
                app:showYouTubeButton="false"
                app:videoId="BZ6izFZLPTo" />

            <TextView
                android:id="@+id/text14"
                android:layout_below="@id/vid14"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/googlesans_regular"
                android:text="Pengenalan Dasar Tools pada Photoshop"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/vid15"
                android:layout_below="@id/vid14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:autoPlay="false"
                app:showYouTubeButton="false"
                app:videoId="qD-u7o2exhU" />

            <TextView
                android:id="@+id/text15"
                android:layout_below="@id/vid15"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/googlesans_regular"
                android:text="Cara Menggunakan Tools pada Photoshop"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@id/text15"
                android:layout_marginTop="10dp"
                android:src="@drawable/footer"/>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>